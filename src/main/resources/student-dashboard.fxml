<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.StudentDashboardController"
      spacing="15"
      style="-fx-padding: 20; -fx-background-color: #f5f9ff;">

    <!-- Header -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <VBox>
            <Label text="Student Dashboard"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="studentNameLabel" text="Welcome!"
                   style="-fx-font-size: 16px; -fx-text-fill: #34495e;"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="studentIdLabel" text="ID: "
               style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
        <Button text="Logout" onAction="#handleLogout"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Status Card -->
    <HBox spacing="20">
        <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
              prefWidth="300">
            <Label text="Clearance Status"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 0 0 10 0;"/>
            <Label fx:id="clearanceStatusLabel" text="LOADING..."
                   style="-fx-font-size: 24px; -fx-padding: 10 0;"/>
            <Separator/>
            <VBox spacing="10" style="-fx-padding: 10 0 0 0;">
                <Button text="&#x1F504; Refresh" onAction="#handleRefresh"
                        style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                <Button text="&#x1F464; View Profile" onAction="#handleViewProfile"
                        style="-fx-background-color: #9b59b6; -fx-text-fill: white;"/>
                <Button text="&#x1F5A8; Print Clearance" onAction="#handlePrintClearance"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
            </VBox>
        </VBox>

        <!-- Warnings Section -->
        <VBox style="-fx-background-color: #fff3cd; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
              prefWidth="300">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="&#x26A0;&#xFE0F;" style="-fx-font-size: 20px;"/>
                <Label text="Warnings &amp; Notices"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #856404;"/>
            </HBox>
            <Separator style="-fx-background-color: #ffeaa7;"/>
            <ScrollPane fitToWidth="true" prefHeight="150"
                        style="-fx-background-color: transparent; -fx-padding: 10 0;">
                <VBox fx:id="warningsBox" spacing="5"/>
            </ScrollPane>
        </VBox>
    </HBox>

    <!-- Clearance Status Table -->
    <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <Label text="Office Clearance Status"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 0 0 15 0;"/>

        <TableView fx:id="statusTable" prefHeight="300">
            <columns>
                <TableColumn fx:id="officeColumn" text="Office" />
                <TableColumn fx:id="statusColumn" text="Status" />
                <TableColumn fx:id="reasonColumn" text="Reason / Remarks" />
                <TableColumn fx:id="dateColumn" text="Date" />
            </columns>
        </TableView>

        <HBox spacing="10" style="-fx-padding: 15 0 0 0;">
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Legend: " style="-fx-text-fill: #7f8c8d;"/>
            <Label text="APPROVED" style="-fx-text-fill: green; -fx-font-weight: bold; -fx-padding: 0 10 0 0;"/>
            <Label text="WARNING" style="-fx-text-fill: orange; -fx-font-weight: bold; -fx-padding: 0 10 0 0;"/>
            <Label text="DENIED" style="-fx-text-fill: red; -fx-font-weight: bold; -fx-padding: 0 10 0 0;"/>
            <Label text="PENDING" style="-fx-text-fill: blue; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>

    <!-- Footer -->
    <HBox alignment="CENTER" style="-fx-padding: 20 0 0 0;">
        <Label text="Digital Clearance System v1.0"
               style="-fx-text-fill: #95a5a6; -fx-font-size: 12px;"/>
    </HBox>

</VBox>