<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.StudentProfileController"
      spacing="20"
      style="-fx-padding: 30; -fx-background-color: #f5f5f5;">

    <!-- Header -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label fx:id="titleLabel" text="Student Profile"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="â† Back" onAction="#handleBack"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
    </HBox>

    <!-- Profile Information -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
        <Label text="Personal Information"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Separator/>
        
        <GridPane hgap="10" vgap="15">
            <columnConstraints>
                <ColumnConstraints prefWidth="150"/>
                <ColumnConstraints prefWidth="250"/>
            </columnConstraints>
            
            <Label text="Student ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold;"/>
            <TextField fx:id="studentIdField" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            
            <Label text="First Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold;"/>
            <TextField fx:id="firstNameField" editable="false" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            
            <Label text="Last Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold;"/>
            <TextField fx:id="lastNameField" editable="false" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            
            <Label text="Gender:" GridPane.rowIndex="3" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold;"/>
            <TextField fx:id="sexField" editable="false" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>
    </VBox>

    <!-- Change Password -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
        <Label text="Change Password"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Separator/>
        
        <GridPane hgap="10" vgap="15">
            <columnConstraints>
                <ColumnConstraints prefWidth="150"/>
                <ColumnConstraints prefWidth="250"/>
            </columnConstraints>
            
            <Label text="Current Password:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold;"/>
            <PasswordField fx:id="currentPasswordField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            
            <Label text="New Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold;"/>
            <PasswordField fx:id="newPasswordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            
            <Label text="Confirm Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold;"/>
            <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
        
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 15 0 0 0;">
            <Button text="Update Password" onAction="#handleUpdatePassword"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
        </HBox>
    </VBox>

</VBox>